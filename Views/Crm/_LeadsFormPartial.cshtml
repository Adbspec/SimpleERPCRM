@model ERP.Dto.LeadDto


<div class="form-group">
    <label for="Name">Name</label>
    <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Enter lead's full name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="Email">Email</label>
    <input type="email" class="form-control" id="Email" asp-for="Email" placeholder="example@domain.com" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="PhoneNumber">Phone Number</label>
    <input type="text" class="form-control" id="PhoneNumber" asp-for="PhoneNumber" placeholder="Enter phone number" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>


<div class="form-group">
    <label for="Status">Status</label>
    <select class="form-control" id="Status" asp-for="Status">
        <option value="New">New</option>
        <option value="Contacted">Contacted</option>
        <option value="Qualified">Qualified</option>
        <option value="Closed">Closed</option>
    </select>
    <span asp-validation-for="Status" class="text-danger"></span>
</div>
